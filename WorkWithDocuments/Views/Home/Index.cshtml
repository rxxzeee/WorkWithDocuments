@{
    ViewData["Title"] = "Highlighter App";
    Layout = null; // Вимикаємо стандартний лейаут, щоб стилі не конфліктували
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Document Processor</title>

    <!-- Google Fonts: Inter -->
    <link href="[https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap](https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap)" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="[https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css](https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css)" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="[https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css](https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css)" rel="stylesheet">

    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
            --bg-color: #f3f4f6;
            --card-bg: #ffffff;
            --text-main: #1f2937;
            --text-muted: #6b7280;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-color);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: var(--text-main);
        }

        /* Красивий фон для всієї сторінки */
        .bg-decorative {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background: radial-gradient(circle at 10% 20%, rgb(239, 246, 255) 0%, rgb(255, 255, 255) 90%);
        }

        .main-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .app-card {
            background: var(--card-bg);
            border-radius: 24px;
            box-shadow: 0 20px 60px -15px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255,255,255,0.8);
            overflow: hidden;
            width: 100%;
            max-width: 600px;
            transition: transform 0.3s ease;
        }

        .app-header {
            background: var(--primary-gradient);
            padding: 3rem 2rem;
            text-align: center;
            color: white;
        }

            .app-header h1 {
                font-weight: 700;
                font-size: 1.75rem;
                margin-bottom: 0.5rem;
            }

            .app-header p {
                opacity: 0.9;
                font-weight: 300;
                margin: 0;
            }

        .app-body {
            padding: 2.5rem;
        }

        .form-label {
            font-weight: 600;
            font-size: 0.9rem;
            color: var(--text-main);
            margin-bottom: 0.5rem;
        }

        /* Стилізація інпутів */
        .form-control {
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.2s ease;
            background-color: #f9fafb;
        }

            .form-control:focus {
                border-color: #8b5cf6;
                box-shadow: 0 0 0 4px rgba(139, 92, 246, 0.1);
                background-color: white;
            }

            .form-control[type="file"] {
                padding: 0.6rem;
            }

        .form-text {
            color: var(--text-muted);
            font-size: 0.85rem;
            margin-top: 0.4rem;
        }

        /* Стилізація кнопки */
        .btn-process {
            background: var(--primary-gradient);
            border: none;
            color: white;
            padding: 1rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            border-radius: 12px;
            width: 100%;
            margin-top: 1.5rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(124, 58, 237, 0.25);
        }

            .btn-process:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(124, 58, 237, 0.35);
                color: white;
            }

            .btn-process:active {
                transform: translateY(0);
            }

            .btn-process:disabled {
                opacity: 0.7;
                cursor: not-allowed;
                transform: none;
            }

        .loading-spinner {
            display: none;
            margin-right: 8px;
        }

        /* Стиль для помилок */
        .alert-danger {
            border-radius: 12px;
            border: none;
            background-color: #fef2f2;
            color: #991b1b;
            font-size: 0.9rem;
            margin-top: 1.5rem;
            display: flex;
            align-items: center;
        }

        .footer {
            text-align: center;
            padding: 1.5rem;
            color: var(--text-muted);
            font-size: 0.8rem;
        }
    </style>
</head>
<body>

    <div class="bg-decorative"></div>

    <div class="main-container">
        <div class="app-card">
            <div class="app-header">
                <h1><i class="bi bi-magic"></i> Smart Highlighter</h1>
                <p>Upload documents and find keywords instantly</p>
            </div>

            <div class="app-body">
                <form asp-action="Process" method="post" enctype="multipart/form-data" id="processForm">

                    <div class="mb-4">
                        <label for="file" class="form-label">
                            <i class="bi bi-file-earmark-text me-1"></i> Document File
                        </label>
                        <input type="file" class="form-control" name="file" required accept=".pdf,.html" />
                        <div class="form-text">Supported formats: <strong>PDF, HTML</strong></div>
                    </div>

                    <div class="mb-2">
                        <label for="keywords" class="form-label">
                            <i class="bi bi-search me-1"></i> Keywords to Highlight
                        </label>
                        <input type="text" class="form-control" name="keywords"
                               placeholder="e.g. contract, urgent, signature" required autocomplete="off" />
                        <div class="form-text">Separate multiple words with commas</div>
                    </div>

                    <button type="submit" class="btn btn-process" id="submitBtn">
                        <span class="spinner-border spinner-border-sm loading-spinner" role="status" aria-hidden="true"></span>
                        <span id="btnText">Process & Download</span>
                    </button>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-circle-fill me-2"></i>
                            <div>@Html.ValidationSummary(false, "", new { @class = "mb-0" })</div>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>

    <div class="footer">
        Test Task Implementation &copy; @DateTime.Now.Year
    </div>

    <script>
        document.getElementById('processForm').addEventListener('submit', function(e) {
            if (this.checkValidity()) {
                var btn = document.getElementById('submitBtn');
                var spinner = btn.querySelector('.loading-spinner');
                var text = document.getElementById('btnText');

                btn.disabled = true;
                spinner.style.display = 'inline-block';
                text.innerText = 'Processing file...';
                setTimeout(function() {
                    btn.disabled = false;
                    spinner.style.display = 'none';
                    text.innerText = 'Process & Download';
                }, 3000);
            }
        });
    </script>
</body>
</html>
